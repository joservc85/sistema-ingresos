//- views/cliente/crear.pug

extends ../layout/index

include ../mixins/formularios

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center text-gray-800")
            | Sistema 
            span(class="font-normal") Ingresos
        h2(class="text-center text-2xl font-bold text-fuchsia-600")= pagina

        div(class="mt-8 mx-auto max-w-4xl px-4")
            div(class="flex justify-start mb-6")
                a(href="/cliente/leer" class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition-colors")
                    i(class="fas fa-arrow-left")
                    span(class="font-bold") Regresar

            div(class="bg-white p-8 rounded-lg shadow-lg")
                //- Muestra de errores de validación
                if errores
                    div(class="mb-6")
                        each error in errores
                            div(class="flex items-center bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-2" role="alert")
                                svg(class="w-6 h-6 text-red-600 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                                p(class="font-bold")= error.msg
                
                form(action="/cliente/crear" method="POST" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken)

                    div(class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8")
                        
                        //- Nombre
                        div(class="flex flex-col gap-1")
                            label(for="nombre" class="block text-sm font-medium text-gray-700") Nombre
                            input#nombre(type="text", name="nombre", placeholder="Nombre del cliente", value= cliente ? cliente.nombre : '', class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                        
                        //- Apellidos
                        div(class="flex flex-col gap-1")
                            label(for="apellidos" class="block text-sm font-medium text-gray-700") Apellidos
                            input#apellidos(type="text", name="apellidos", placeholder="Apellidos del cliente", value= cliente ? cliente.apellidos : '', class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")

                        //- Correo Electrónico
                        div(class="flex flex-col gap-1")
                            label(for="email" class="block text-sm font-medium text-gray-700") Correo Electrónico
                            input#email(type="email", name="email", placeholder="ejemplo@correo.com", value= cliente ? cliente.email : '', class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                        
                        //- Teléfono
                        div(class="flex flex-col gap-1")
                            label(for="telefono" class="block text-sm font-medium text-gray-700") Teléfono
                            div(class="flex items-center")
                                select#prefijo_telefono(name="prefijo_telefono" class="h-full px-3 py-2 border border-r-0 border-gray-300 rounded-l-md bg-gray-50 focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                                    //- Usamos nuestro mixin para los prefijos
                                    +prefijosCelular(cliente ? cliente.prefijo_telefono : '')
                                input#telefono(type="text", name="telefono", placeholder="Número de celular", value= cliente ? cliente.telefono : '', class="w-full px-3 py-2 border border-gray-300 rounded-r-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")

                    //- Botones de acción
                    div(class="mt-8 flex justify-end gap-4")
                        a(href="/cliente/leer" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-md transition-colors") Cancelar
                        input(type="submit", value="Registrar Cliente", class="bg-gradient-to-r from-fuchsia-500 to-purple-600 hover:from-fuchsia-600 hover:to-purple-700 text-white font-bold py-2 px-6 rounded-md cursor-pointer transition-all")