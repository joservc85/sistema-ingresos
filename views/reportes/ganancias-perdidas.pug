extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-3xl md:text-4xl my-10 font-extrabold text-center") Reporte de 
            span(class="font-normal") Ganancias y PÃ©rdidas
        
        div(class="mt-8 mx-auto max-w-4xl px-4")
            //- Formulario para seleccionar el rango de fechas
            form(method="GET" action="/reportes/ganancias-perdidas" class="bg-white p-6 rounded-lg shadow-md mb-8 flex flex-col sm:flex-row items-end gap-4")
                div(class="flex-grow w-full")
                    label(for="fecha_inicio" class="block text-sm font-medium text-gray-700 mb-1") Desde
                    input(type="date" name="fecha_inicio" value=fechaInicio class="w-full px-3 py-2 border border-gray-300 rounded-md")
                div(class="flex-grow w-full")
                    label(for="fecha_fin" class="block text-sm font-medium text-gray-700 mb-1") Hasta
                    input(type="date" name="fecha_fin" value=fechaFin class="w-full px-3 py-2 border border-gray-300 rounded-md")
                button(type="submit" class="w-full sm:w-auto flex-shrink-0 bg-fuchsia-600 text-white px-6 py-2 rounded-md font-bold hover:bg-fuchsia-700 cursor-pointer") Generar Reporte

            //- Contenedor de las tarjetas de resultados
            div(class="grid grid-cols-1 md:grid-cols-3 gap-6")
                //- Tarjeta de Ingresos
                div(class="bg-white p-6 rounded-lg shadow-lg border-l-4 border-green-500")
                    p(class="text-sm text-gray-500") (+) Ingresos Totales
                    p(class="text-3xl font-extrabold text-green-600") $#{totalIngresos.toLocaleString('es-CO')}

                //- Tarjeta de Gastos
                div(class="bg-white p-6 rounded-lg shadow-lg border-l-4 border-red-500")
                    p(class="text-sm text-gray-500") (-) Gastos Totales
                    p(class="text-3xl font-extrabold text-red-600") $#{totalGastos.toLocaleString('es-CO')}

                //- Tarjeta de Ganancia Neta
                div(class="bg-white p-6 rounded-lg shadow-lg border-l-4" class=(gananciaNeta >= 0 ? 'border-blue-500' : 'border-orange-500'))
                    p(class="text-sm text-gray-500") (=) Ganancia Neta
                    p(class=`text-3xl font-extrabold ${gananciaNeta >= 0 ? 'text-blue-600' : 'text-orange-500'}`) $#{gananciaNeta.toLocaleString('es-CO')}
