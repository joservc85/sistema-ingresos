extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Registrar 
            span(class="font-normal") Nuevo Banco

        div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
            div(class="flex justify-start mb-6")
                a(href="/bancos/leer" class="flex items-center gap-2 text-gray-600 hover:text-gray-800")
                    i(class="fas fa-arrow-left")
                    span(class="font-bold") Regresar
            
            if errores
                div(class="mb-6")
                    each error in errores
                        p(class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-2 font-bold")= error.msg

            form(method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label(for="nombre" class="block text-sm font-medium text-gray-700") Nombre del Banco
                    input#nombre(type="text" name="nombre" value=datos.nombre || '' class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm")
                div(class="mt-8")
                    input(type="submit" value="Guardar Banco" class="w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-bold py-3 cursor-pointer rounded-lg")