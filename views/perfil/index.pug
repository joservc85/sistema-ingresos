extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-3xl md:text-4xl my-10 font-extrabold text-center") Mi 
            span(class="font-normal") Perfil
        h2(class="text-center text-2xl font-bold text-fuchsia-600")= pagina

        div(class="mt-8 mx-auto max-w-lg px-4")
            div(class="bg-white p-6 md:p-8 rounded-lg shadow-lg")
                if errores
                    div(class="mb-6")
                        each error in errores
                            div(class="flex items-center bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-2" role="alert")
                                p(class="font-bold")= error.msg

                form(method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div(class="space-y-5")
                        //- Nombre de Usuario (no editable)
                        div
                            label(class="block text-sm font-medium text-gray-700") Nombre de Usuario
                            p(class="mt-1 text-lg font-semibold text-gray-800 bg-gray-100 p-2 rounded-md")= usuario.username

                        //- --- CAMPO DE CONTRASEÑA ACTUALIZADO ---
                        div(class="relative")
                            label(for="password_actual" class="block text-sm font-medium text-gray-700") Contraseña Actual
                            input#password_actual(type="password" name="password_actual" class="w-full pr-10 mt-1 block px-3 py-2 border border-gray-300 rounded-md shadow-sm")
                            div(class="absolute inset-y-0 right-0 top-6 pr-3 flex items-center")
                                button(type="button" class="text-gray-400 hover:text-gray-600" data-toggle-password="password_actual")
                                    i(class="fas fa-eye")

                        //- --- CAMPO DE CONTRASEÑA ACTUALIZADO ---
                        div(class="relative")
                            label(for="password_nuevo" class="block text-sm font-medium text-gray-700") Nueva Contraseña
                            input#password_nuevo(type="password" name="password_nuevo" class="w-full pr-10 mt-1 block px-3 py-2 border border-gray-300 rounded-md shadow-sm")
                            div(class="absolute inset-y-0 right-0 top-6 pr-3 flex items-center")
                                button(type="button" class="text-gray-400 hover:text-gray-600" data-toggle-password="password_nuevo")
                                    i(class="fas fa-eye")

                        //- --- CAMPO DE CONTRASEÑA ACTUALIZADO ---
                        div(class="relative")
                            label(for="repetir_password" class="block text-sm font-medium text-gray-700") Repetir Nueva Contraseña
                            input#repetir_password(type="password" name="repetir_password" class="w-full pr-10 mt-1 block px-3 py-2 border border-gray-300 rounded-md shadow-sm")
                            div(class="absolute inset-y-0 right-0 top-6 pr-3 flex items-center")
                                button(type="button" class="text-gray-400 hover:text-gray-600" data-toggle-password="repetir_password")
                                    i(class="fas fa-eye")
                    
                    div(class="mt-8")
                        input(type="submit" value="Guardar Cambios" class="w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-bold py-3 cursor-pointer rounded-lg")

block scripts
    script(src="/js/showPassword.js")