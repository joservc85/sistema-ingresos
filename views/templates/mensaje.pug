extends ../layout/index

block contenido
    // Contenedor principal con el fondo degradado y centrado vertical
    div(class="bg-gradient-to-br from-violet-100 via-rose-50 to-white min-h-screen flex items-center justify-center py-12 px-4")

        div(class="w-full max-w-md mx-auto")
            div
                // Títulos con el estilo unificado
                h1(class="text-4xl font-bold text-center text-gray-800") Sistemas Ingresos
                p(class="text-xl text-center text-gray-600") Damaris SPA

                h2(class="text-center text-2xl font-semibold mt-8 text-gray-700")= pagina

            // Tarjeta de mensaje mejorada
            // NOTA: Usamos un template literal de JavaScript para cambiar el color del borde dinámicamente
            div(class=`mt-8 bg-white p-8 md:p-12 text-center shadow-xl rounded-2xl border-t-8 ${tipo === 'success' ? 'border-green-500' : tipo === 'error' ? 'border-red-500' : 'border-blue-500'}`)
                
                // Lógica para mostrar el icono y mensaje según el tipo
                if tipo === 'success'
                    // Icono de éxito mejorado
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-green-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z")
                    p(class="text-2xl font-bold text-gray-800")= mensaje
                    // Mensaje de redirección
                    if urlRedireccion
                        p(class="text-sm text-gray-500 mt-2") Serás redirigido en 3 segundos...

                else if tipo === 'error'
                    // Icono de error mejorado
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-red-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z")
                    p(class="text-2xl font-bold text-gray-800")= mensaje

                else
                    // Icono de información mejorado
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-blue-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                    p(class="text-2xl font-bold text-gray-800")= mensaje

                // Botón de llamada a la acción
                div(class="mt-8")
                    a(href="/auth/login" class="w-full inline-block bg-gradient-to-r from-fuchsia-500 to-purple-600 hover:from-fuchsia-600 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-md cursor-pointer transition-all duration-300") Volver

block scripts
    // La lógica de redirección se mantiene intacta
    script.
        document.addEventListener('DOMContentLoaded', function() {
            if ('#{tipo}' === 'success' && '#{urlRedireccion}' !== '') {
                const url = '#{urlRedireccion}';
                setTimeout(() => {
                    window.location.href = url;
                }, 3000); // 3 segundos
            }
        });