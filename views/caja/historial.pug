extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-3xl md:text-4xl my-10 font-extrabold text-center") Historial de 
            span(class="font-normal") Cierres de Caja
        
        div(class="flex justify-start mb-8")
            a(href="/mis-actividades" class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition-colors")
                i(class="fas fa-arrow-left")
                span(class="font-bold") Regresar a Actividades

        if !cierres || cierres.length === 0
            p(class="text-center text-gray-500 mt-10") Aún no se han guardado cierres de caja.
        else
            div(class="bg-white shadow rounded-lg overflow-x-auto")
                table(class="min-w-full leading-normal")
                    thead
                        tr
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 uppercase") Fecha del Cierre
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase") Estado
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase") Total Ventas
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase") Descuadre
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase") Cerrado Por
                            th(class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 uppercase") Acciones
                    tbody
                        each cierre in cierres
                            tr(class=`${cierre.estado === 'Anulado' ? 'bg-red-50' : ''}`)
                                td(class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center")= new Date(cierre.fecha_cierre + 'T12:00:00').toLocaleDateString('es-VE')
                                td(class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-left")
                                    if cierre.estado === 'Anulado'
                                        span(class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full") Anulado
                                    else
                                        span(class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full") Consolidado

                                td(class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right font-bold") $#{parseFloat(cierre.total_ventas_dia).toLocaleString('es-CO')}
                                td(class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right font-semibold")
                                    span(class=`${cierre.descuadre < 0 ? 'text-red-600' : 'text-green-600'}`)= `$${parseFloat(cierre.descuadre).toLocaleString('es-CO')}`
                                td(class="px-5 py-5 border-b border-gray-200 bg-white text-sm")= cierre.usuario.nombre
                                
                                td(class="px-5 py-5 border-b border-gray-200 text-sm text-center")
                                        div(class="flex items-center justify-center gap-x-2")                                
                                            button(type="button" class="ver-cierre-btn bg-cyan-500 hover:bg-cyan-600 text-white px-4 py-1 rounded-md font-semibold text-xs transition-colors cursor-pointer" data-cierre-id=cierre.id) Ver                                
                                            form(method="POST" action=`/cierre-caja/anular/${cierre.id}` class="form-eliminar")
                                                input(type="hidden" name="_csrf" value=csrfToken)
                                                button(type="submit" class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-1 rounded-md font-semibold text-xs transition-colors cursor-pointer") Anular


    //- Modal para ver el detalle del cierre (reutiliza la estructura de cierre-existente.pug)
    div(id="modal-cierre" class="hidden fixed inset-0 z-50 bg-gray-900 bg-opacity-75 p-4")
        div(class="bg-white rounded-lg shadow-xl w-full sm:max-w-2xl max-h-full flex flex-col")
            div(class="bg-blue-500 p-4 rounded-t-lg")
                h2(id="modal-cierre-titulo" class="text-2xl font-bold text-white text-center tracking-wide") Detalle del Cierre
            div(class="flex justify-between items-center p-5 border-b")
                h3(class="text-xl font-bold text-gray-800") Resumen Guardado
                button(id="modal-cierre-cerrar" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center cursor-pointer")
                    i(class="fas fa-times fa-lg")
            div(id="modal-cierre-cuerpo" class="p-6 overflow-y-auto")
                //- Contenido se llenará con JavaScript
            div(class="flex items-center justify-end p-4 border-t")
                button(id="btn-cierre-cerrar-footer" type="button" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded-lg cursor-pointer") Cerrar

block scripts
    script(src="/js/modalCierre.js")