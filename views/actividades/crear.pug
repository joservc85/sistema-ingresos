//- views/actividades/crear.pug

extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center text-gray-800")
            | Sistema 
            span(class="font-normal") Ingresos
        h2(class="text-center text-2xl font-bold text-fuchsia-600")= pagina

        div(class="mt-8 mx-auto max-w-4xl px-4")
            div(class="flex justify-start mb-6")
                a(href="/mis-actividades" class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition-colors")
                    i(class="fas fa-arrow-left")
                    span(class="font-bold") Regresar
            
            div(class="bg-white p-8 rounded-lg shadow-lg")
                //- Muestra de errores de validación
                if errores
                    div(class="mb-6")
                        each error in errores
                            div(class="flex items-center bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-2" role="alert")
                                p(class="font-bold")= error.msg
                
                form#formActividad(method="POST" action="/actividades/crear")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    input(type="hidden" name="procedimiento" id="procedimientoHidden" value= datos.procedimiento || '')
                    input(type="hidden" name="precio" id="precioHidden" value= datos.precio || '')

                    //- Sección de Información General
                    div(class="mb-8")
                        h3(class="text-lg leading-6 font-bold text-gray-900") Información General
                        p(class="text-sm text-gray-500 mt-1") Selecciona el personal, cliente y el procedimiento realizado.
                    
                    div(class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8")
                        //- Personal
                        div(class="flex flex-col gap-1")
                            label(for="personal" class="block text-sm font-medium text-gray-700") Personal
                            select#personal(name="personal" class="w-full h-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                                option(value="") -- Seleccione --
                                each personal in personals
                                    option(value=personal.id selected= datos.personal ? datos.personal == personal.id : false)= personal.nombre + ' ' + personal.apellidos
                        
                        //- Cliente
                        div(class="flex flex-col gap-1")
                            label(for="cliente" class="block text-sm font-medium text-gray-700") Cliente
                            select#cliente(name="cliente" class="w-full h-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                                option(value="") -- Seleccione --
                                each cliente in clientes
                                    if cliente.tipo === 'Spa' || cliente.tipo === 'Ambos'
                                        option(value=cliente.id selected= datos.cliente ? datos.cliente == cliente.id : false)= cliente.nombre + ' ' + cliente.apellidos

                        //- Procedimiento y Precio
                        div(class="md:col-span-2 flex flex-col gap-1")
                            label(for="procedimientoPrecio" class="block text-sm font-medium text-gray-700") Procedimiento y Precio
                            select#procedimientoPrecio(name="procedimientoPrecio" class="w-full h-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500")
                                option(value="") -- Seleccione --
                                each procedimiento in procedimientos
                                    if procedimiento.precio
                                        - const combinedValue = `${procedimiento.id}-${procedimiento.precio.id}`
                                        - const isSelected = datos.procedimiento == procedimiento.id && datos.precio == procedimiento.precio.id
                                        option(value=combinedValue selected=isSelected data-precio=procedimiento.precio.monto)= `${procedimiento.nombre} - $ ${parseFloat(procedimiento.precio.monto).toLocaleString('es-CO')}`
                                    else
                                        option(value=procedimiento.id disabled)= `${procedimiento.nombre} (Precio no disponible)`

                    //- Sección de Información de Pago
                    div#seccionPagos(class="mt-8")
                        fieldset(class="mt-6 border border-gray-300 p-4 rounded-md")
                            legend(class="px-2 text-lg font-semibold text-gray-700") Información de Pago
                            div(class="flex justify-between items-baseline mb-4")
                                p(class="text-gray-600") Precio del Procedimiento: 
                                    span#precio-procedimiento-display(class="font-bold text-xl ml-2 text-gray-800") $0
                                p(class="text-gray-600") Monto Restante: 
                                    span#monto-restante-display(class="font-bold text-xl ml-2 text-red-600") $0

                            div#pagosContainer(class="space-y-4")
                                //- Las filas de pago se insertarán aquí

                            button(type="button" id="btnAgregarPago" class="mt-4 flex items-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg shadow-md")
                                i(class="fas fa-plus")
                                span Añadir Pago
                    //- Sección de Material Utilizado
                    div#seccionMateriales(class="mt-8 pt-6 border-t border-gray-200")
                        h3(class="text-lg leading-6 font-bold text-gray-900") Material Utilizado
                        p(class="text-sm text-gray-500 mb-4") Registra los materiales utilizados en esta actividad.
                        div#materialesContainer(class="space-y-4")
                            //- CORRECCIÓN: Se ajusta el grid a 12 columnas para más control
                            div.material-item(class="grid grid-cols-12 gap-4 items-end bg-gray-50 p-4 rounded-md shadow-sm")
                                
                                //- CORRECCIÓN: El div del Artículo ahora ocupa 6 de 12 columnas
                                div(class="col-span-12 md:col-span-6")
                                    label(for="articuloId[]" class="block text-sm font-medium text-gray-700") Artículo
                                    select(name="articuloId[]" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-fuchsia-500 articulo-select")
                                        option(value="") -- Seleccione --
                                        each articulo in articulos
                                            option(value=articulo.id data-stock=articulo.stock_actual)= articulo.nombre_articulo
                                
                                //- CORRECCIÓN: El div de Cantidad ahora ocupa 4 de 12 columnas
                                div(class="col-span-7 md:col-span-4")
                                    label(for="cantidad[]" class="block text-sm font-medium text-gray-700") Cantidad
                                    input(type="number" min="0.1" step="0.1" name="cantidad[]" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-fuchsia-500")
                                
                                //- CORRECCIÓN: El div del Botón ahora ocupa 2 de 12 columnas
                                div(class="col-span-5 md:col-span-2")
                                    button(type="button" class="eliminar-material w-full bg-red-100 text-red-600 hover:bg-red-200 font-semibold py-2 px-4 rounded-md transition cursor-pointer")
                                        i(class="fas fa-trash-alt")

                        div(class="mt-4 text-right")
                            button#btnAgregarMaterial(type="button" class="bg-fuchsia-500 hover:bg-fuchsia-600 text-white font-bold py-2 px-6 rounded-md transition-all cursor-pointer")
                                i(class="fas fa-plus mr-2")
                                | Agregar Material
                    
                    //- Sección de Vales
                    div(class="mt-8 pt-6 border-t border-gray-200")
                        h3(class="text-lg leading-6 font-bold text-gray-900") Registro de Vales (Opcional)
                        div(class="mt-4")
                            div(class="flex items-center")
                                input#soloVales(type="checkbox" name="soloVales" class="h-5 w-5 text-fuchsia-600 focus:ring-fuchsia-500 border-gray-300 rounded" checked=datos.soloVales === 'on')
                                label(for="soloVales" class="ml-3 block text-sm font-medium text-gray-700") Marcar si solo se registrará un vale (sin actividad).
                            div(class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8 mt-4")
                                div(class="flex flex-col gap-1")
                                    label(for="vales_display" class="block text-sm font-medium text-gray-700") Monto del Vale
                                    input#vales_display(type="text", placeholder="0.00", class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500 disabled:bg-gray-100", disabled= !datos.soloVales, oninput="formatNumberInput(event)", data-target-hidden-id="vales", value=datos.vales ? new Intl.NumberFormat('es-CO').format(datos.vales) : '')
                                    input#vales(type="hidden", name="vales", value=datos.vales || '')
                                div(class="flex flex-col gap-1")
                                    label(for="descripcion" class="block text-sm font-medium text-gray-700") Descripción del Vale
                                    input#descripcion(type="text" name="descripcion" placeholder="Ej: Adelanto de nómina" value=datos.descripcion || '' disabled= !datos.soloVales class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500 disabled:bg-gray-100")

                    //- Botones de acción
                    div(class="mt-8 pt-6 border-t border-gray-200 flex justify-end gap-4")
                        a(href="/mis-actividades" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-md transition-colors") Cancelar
                        input(type="submit", value="Agregar Actividad", class="bg-gradient-to-r from-fuchsia-500 to-purple-600 hover:from-fuchsia-600 hover:to-purple-700 text-white font-bold py-2 px-6 rounded-md cursor-pointer transition-all")

    //- PLANTILLA PARA UNA FILA DE PAGO (Oculta)
    template#plantilla-pago
        div(class="pago-item grid grid-cols-12 gap-4 items-end p-3 border rounded-md bg-gray-50")
            //- Forma de Pago
            div(class="col-span-12 md:col-span-3")
                label(class="text-xs font-medium text-gray-700") Forma de Pago
                select(name="formaDePagoId[]" class="forma-pago-select w-full mt-1 text-sm border-gray-300 rounded-md")
                    option(value="") -- Seleccione --
                    each forma in formasDePago
                        option(value=forma.id data-nombre=forma.nombre)= forma.nombre
            //- Monto
            div(class="col-span-12 md:col-span-3")
                label(class="text-xs font-medium text-gray-700") Monto
                input(type="text" name="monto[]" placeholder="0" class="monto-pago w-full mt-1 text-sm border-gray-300 rounded-md text-right")
            //- Banco
            div(class="col-span-12 md:col-span-3 campo-banco hidden")
                label(class="text-xs font-medium text-gray-700") Banco
                select(name="bancoId[]" class="w-full mt-1 text-sm border-gray-300 rounded-md")
                    option(value="") -- Seleccione --
                    each banco in bancos
                        option(value=banco.id)= banco.nombre
            //- Referencia
            div(class="col-span-12 md:col-span-2 campo-referencia hidden")
                label(class="text-xs font-medium text-gray-700") Referencia
                input(type="text" name="referencia_pago[]" class="w-full mt-1 text-sm border-gray-300 rounded-md")
            //- Botón Eliminar
            div(class="col-span-12 md:col-span-1 flex justify-end items-center")
                button(type="button" class="eliminar-pago text-red-500 hover:text-red-700")
                    i(class="fas fa-trash-alt")

block scripts
    script(src="/js/crearActividad.js")
    script(src="/js/app.js")
    script(src="/js/pagoActividad.js")